<div class="row" ng-controller="detailsController" ng-model="product">
    <div class="col-md-4">
        <img class="img-responsive" src="{{product.ImageLink}}"/>
    </div>
    <div class="col-md-4">
        <h3>{{product.Name}}</h3>
        <p>{{product.Description}}</p>
    </div>
    <div class="col-md-4">
        <h3>Price History</h3>
        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Update Date</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
                <tr ng-repeat="price in product.PriceHistory">
                    <td>{{price.Date}}</td>
                    <td>{{price.Price}}</td>
                </tr>
            
            </tbody>
        </table>
    </div>
</div>